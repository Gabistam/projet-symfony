{% extends "admin/base.html.twig" %}

{% block main %}

	<div class="page-title">
		<h2>Liste des licences</h2>
	</div>

	{% for licence in licences %}
		<div class="container d-flex justify-content-center">
			<div class="card" style="width: 50%;">
				<img src="{{ asset('image/' ~ licence.media) }}" alt="{{ licence.name }}">
				<div class="card-body">


					<a href="{{ path("admin_licence_show", {'id' : licence.id } ) }}">
						<button type="button" class="btn btn-primary">{{ licence.name }}</button>
					</a>
					<hr>
					<a href="{{ path("admin_licence_show", {'id' : licence.id } ) }}">
						<button type="button" class="btn btn-primary">{{ licence.description }}</button>
					</a>


				</div>
			</div>

		</div><br><br>
	{% endfor %}

{% endblock %}
